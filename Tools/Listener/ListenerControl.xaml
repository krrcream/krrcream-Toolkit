<UserControl
    x:Class="krrTools.Tools.Listener.ListenerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#FFBDC1C1"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Border with Buttons  -->
        <Border
            Grid.Row="0"
            Padding="10"
            Background="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Width="200"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding WindowTitle}" />
                <TextBox
                    x:Name="N2NCHotkeyTextBox"
                    Grid.Column="2"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Background="LightGray"
                    IsReadOnly="True"
                    Text="{Binding N2NCHotkey, Mode=TwoWay}"
                    ToolTip="Click here and press key combination to set N2NC hotkey" />
                <TextBox
                    x:Name="DPHotkeyTextBox"
                    Grid.Column="3"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Background="LightGray"
                    IsReadOnly="True"
                    Text="{Binding DPHotkey, Mode=TwoWay}"
                    ToolTip="Click here and press key combination to set DP hotkey" />
                <TextBox
                    x:Name="KRRLNHotkeyTextBox"
                    Grid.Column="4"
                    Width="150"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Background="LightGray"
                    IsReadOnly="True"
                    Text="{Binding KRRLNHotkey, Mode=TwoWay}"
                    ToolTip="Click here and press key combination to set KRRLN hotkey" />
            </Grid>
        </Border>

        <!--  Content Area  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Songs Path Area  -->
            <StackPanel
                Grid.Row="0"
                Margin="5,0,5,10"
                Orientation="Vertical">
                <TextBlock
                    FontSize="14"
                    Foreground="White"
                    Text="{Binding SongsFolderPathHeader.Value}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Background="Transparent"
                        FontSize="18"
                        Foreground="Black"
                        Text="{Binding SongsPath, Mode=TwoWay}" />
                    <Button
                        Grid.Column="1"
                        Width="120"
                        Height="42"
                        Padding="10,2"
                        Command="{Binding BrowseCommand}"
                        Content="Browse Songs" />
                </Grid>
                <Image
                    Height="100"
                    Margin="0,10,0,0"
                    Source="{Binding BGPath}"
                    Stretch="Uniform" />
            </StackPanel>

            <!--  Current File Info  -->
            <GroupBox
                Grid.Row="1"
                Margin="0,10,0,0"
                FontSize="18"
                Header="Current Beatmap Info">
                <ItemsControl
                    x:Name="FileInfoContainer"
                    Margin="0,5,0,0"
                    ItemsSource="{Binding FileInfoItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="16">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}: {1}">
                                        <Binding Path="Key" />
                                        <Binding Path="Value" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>