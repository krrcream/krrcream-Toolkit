<Window x:Class="krrTools.tools.Listener.HotkeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Hotkey" Height="200" Width="300"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Press your desired key combination:" Margin="0,0,0,10"/>
        
        <TextBox Grid.Row="1" x:Name="HotkeyTextBox" 
                 IsReadOnly="True" 
                 Text="Press keys..."
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Height="30" Margin="0,0,0,10"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="SaveButton_Click" 
                    Padding="15,5" Margin="0,0,10,0" Background="LightBlue"/>
            <Button Content="Cancel" Click="CancelButton_Click" 
                    Padding="15,5" Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>